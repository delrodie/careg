{{ form_start(form) }}
    <div class="card m-b-30 formulaire">
        <div class="card-body">
            <h2 class="h2 mt-0 mb-5 text-white">Activit√©</h2>
            <div class="form-group row">
                <div class="col-md-4 select"> {{ form_row(form.type) }} </div>
                <div class="col-md-4 select"> {{ form_row(form.niveau) }} </div>
                <div class="col-md-4">{{ form_row(form.nom) }}</div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-3 col-sm-12">{{ form_row(form.dateDebut) }}</div>
                <div class="col-md-3 col-sm-12">{{ form_row(form.dateFin) }}</div>
                <div class="col-md-6 col-sm-12">{{ form_row(form.lieu) }}</div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-6">{{ form_row(form.description) }}</div>
                <div class="col-md-6">{{ form_row(form.situation) }}</div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-4">{{ form_row(form.latittude) }}</div>
                <div class="col-md-4">{{ form_row(form.longetude) }}</div>
                <div class="col-md-4 mt-5"><i class="fa fa-question-circle"></i> <a href="https://www.coordonnees-gps.fr/" target="_blank" title="Cliquez ici une fois sur le site pour obtenir la latitude et la longitude">Pour les obtenir Cliquez ici une fois sur le site</a></div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-4">{{ form_row(form.nomProprietaire) }}</div>
                <div class="col-md-4">{{ form_row(form.fonctionProprietaire) }}</div>
                <div class="col-md-4">{{ form_row(form.contactProprietaire) }}</div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-md-12">{{ form_row(form.autorisation) }}</div>
            </div>
        </div>
        {{ form_widget(form) }}
        <div class="text-right mt-5 mb-5 pr-5">
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>

{{ form_end(form) }}

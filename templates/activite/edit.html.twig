{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion des activités{% endblock %}

{% block body %}
    <div class="content-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Formulaire de modification des activités</h4>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12 text-right">
                <a href="{{ path('backend_activite_index') }}" class="btn btn-primary" ><i class="fa fa-list"></i> Liste des activités</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" style="font-size: 1.3rem;">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ include('activite/_form.html.twig', {'button_label': 'Modifier'}) }}

                {{ include('activite/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css')) }}">
    <style>
        .select select option{
            color: black;
        }
        .formulaire input, select, textarea{
            color: white;
            font-weight: bold;
            font-size: 1.1rem;
        }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('assets/backoffice/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')) }}"></script>
    <script>
        $().ready(function (t) {
            //t("#eleve_dateNaissance").bootstrapMaterialDatePicker({weekStart:0,time:!1})
            t("#activite_groupe_dateDebut").datepicker({
                format: "yyyy-mm-dd",
                locale: 'fr-FR',
                autoclose: !0
            })
            t("#activite_groupe_dateFin").datepicker({
                format: "yyyy-mm-dd",
                locale: 'fr-FR',
                autoclose: !0
            })
        })
    </script>
{% endblock %}


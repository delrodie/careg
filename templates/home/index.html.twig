{% extends 'base.html.twig' %}

{% block title %}recherche{% endblock %}

{% block body %}

    <section id="home" class="section welcome-area bg-overlay d-flex align-items-center">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-12 col-lg-7">
                    <div class="welcome-intro">
                        <h1 class="text-white">Inscrivez vous</h1>
                        <p class="text-white my-4">
                            <strong>CAREG</strong> est la plateforme de Camping et autres régroupement de l'Association des Scouts Catholiques de Côte d'Ivoire.
                            <br>
                            Non accès à cette plateforme que les Equipes de Groupe, de districts et de regions. La souscription est faite uniquement par le premier responsable
                            de la structure.
                        </p> <strong></strong>
                        <div class="button-group store-buttons d-flex">
                            <a href="{{ path('backend_dashboard_index') }}" class="btn sApp-btn text-uppercase">Avez-vous déjà un compte?</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-8 col-lg-5">
                    <div class="contact-box bg-white text-center rounded p-4 p-sm-5 mt-5 mt-lg-0 shadow-lg">
                        <form action="{{ path('app_home') }}" method="post">
                            <div class="contact-top">
                                <h3 class="contact-title">Formulaire!</h3>

                                {% for label, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="alert alert-{{ label }} alert-dismissible fade show d-flex text-left" role="alert">
                                            <!--<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>-->
                                            {% if label == 'success' %}
                                                <i class="fa fa-check-circle fa-2x"></i> {{ message|raw }}
                                            {% else %}
                                                <i class="fa fa-exclamation-circle fa-2x"></i>{{ message|raw }}
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="alert alert-secondary alert-dismissible fade show d-flex align-items-center" role="alert">
                                        <h5 class="text-secondary fw-3 py-3">Faites la demande d'inscription de votre entité (Groupe - District ou Region) </h5>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <input type="text" name="careg_matricule_search" class="form-control" placeholder="Matricule" autocomplete="off">
                                    </div>
                                    <div class="form-group">
                                        <input type="email" name="careg_email_search" class="form-control" placeholder="email" autocomplete="off">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-bordered w-100 mt-3 mt-sm-4" type="submit">Souscrire</button>
                                    <div class="contact-bottom">
                                        <span class="d-inline-block mt-3">Avez-vous besoin d'aide <a href="#">Cliquez ici ?</a></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="form-message"></p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Shape Bottom -->
        <div class="shape-bottom">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
                <path class="shape-fill" fill="#FFFFFF" d="M421.9,6.5c22.6-2.5,51.5,0.4,75.5,5.3c23.6,4.9,70.9,23.5,100.5,35.7c75.8,32.2,133.7,44.5,192.6,49.7  c23.6,2.1,48.7,3.5,103.4-2.5c54.7-6,106.2-25.6,106.2-25.6V0H0v30.3c0,0,72,32.6,158.4,30.5c39.2-0.7,92.8-6.7,134-22.4  c21.2-8.1,52.2-18.2,79.7-24.2C399.3,7.9,411.6,7.5,421.9,6.5z"></path>
            </svg>
        </div>
    </section>
{% endblock %}
